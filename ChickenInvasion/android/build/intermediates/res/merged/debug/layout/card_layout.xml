<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="#FFF"
        android:id="@+id/weapon_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        card_view:cardCornerRadius="4dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="215dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/weaponImg"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/beachball200x200"
                    android:layout_margin="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="215dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:background="#EEE">

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:id="@+id/damageIndicator"
                    android:progressTint="#d10000"
                    android:layout_marginLeft="60dp"
                    android:layout_marginBottom="120dp"
                    android:progressBackgroundTint="#FFF"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:progress="0"
                    android:indeterminate="false"
                    android:max="200"/>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:id="@+id/speedIndicator"
                    android:progressTint="#0086e2"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="60dp"
                    android:layout_marginBottom="80dp"
                    android:progressBackgroundTint="#FFF"
                    android:progress="0"
                    android:max="20"
                    android:indeterminate="false"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/damageView"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="false"
                    android:background="@drawable/damageiconnew"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="115dp"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/speedView"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="false"
                    android:background="@drawable/speediconnew"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="75dp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Title"
                    android:id="@+id/name"
                    android:textColor="#000000"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:gravity="center_horizontal"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical|center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="10"
                        android:id="@+id/price"
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:layout_alignTop="@+id/imageView4"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_vertical|right"
                        android:layout_marginRight="10dp"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/imageView4"
                        android:src="@drawable/chickenleg"
                        android:layout_alignParentBottom="true"
                        android:layout_toEndOf="@+id/price"/>
                </RelativeLayout>




            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>